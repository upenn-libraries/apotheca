version: "3.8"

services:
  sidekiq-{{ item.name }}:
    image: ${APP_IMAGE_NAME}:${APP_IMAGE_TAG}
    command: ["bundle", "exec", "sidekiq", {{ item.queues | map('regex_replace', '^(.*)$', '"-q", "\\1"') | join(', ') }}, "-c", "{{ item.concurrency }}"]
    deploy:
      placement:
        constraints:
          - "node.labels.sidekiq == true"
      replicas: {{ item.replicas }}
      update_config:
        order: "start-first"
        parallelism: 1
    environment:
{% if is_development == true %}
      APP_UID: ${UID:-1000}
      APP_GID: ${GID:-1000}
      MINIO_URL: "http://minio:${MINIO_PORT}"
{% endif %}
      DATABASE_NAME: ${DATABASE_NAME}
      DATABASE_PASSWORD: /run/secrets/database_password
      DATABASE_USER: ${DATABASE_USER}
      APP_URL: ${APP_URL}
      RAILS_ENV: ${APP_RAILS_ENV}
      REDIS_SIDEKIQ_USER: ${REDIS_SIDEKIQ_USER}
      REDIS_SIDEKIQ_PASSWORD: ${REDIS_SIDEKIQ_PASSWORD}
      REDIS_URL: "redis://redis:${REDIS_PORT}/0"
      SOLR_URL: "${SOLR_URL}"
      FITS_URL: "http://fits:${FITS_PORT}/fits"
    healthcheck:
      test:
        [
          "CMD-SHELL",
          "ps aux | grep '[s]idekiq 7' || exit 1",
        ]
      interval: 30s
      retries: 3
      start_period: 1m
      timeout: 30s
    logging:
      driver: json-file
      options:
        max-file: "3"
        max-size: "10m"
    networks:
      - database
      - redis
      - traefik
{% if is_development == true %}
    volumes:
      - /apotheca/ansible/roles/apotheca/files/src/:/home/app
{% endif %}
    secrets:
      - database_password
      - redis_sidekiq_password
networks:
  database:
    external: true
  redis:
    external: true
  traefik:
    external: true

secrets:
  database_password:
    external: true
    name: ${DATABASE_PASSWORD}
  redis_sidekiq_password:
    external: true
    name: ${REDIS_SIDEKIQ_PASSWORD}
