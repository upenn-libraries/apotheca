<h3 id="actions" class="mb-3">Actions</h3>

<div class="d-flex justify-content-around my-3">
<% if can? :refresh_ils_metadata, @item  %>
  <%= render Form::Component.new(name: 'refresh_ILS_metadata', url: refresh_ils_metadata_item_path(@item), method: :post) do |component| %>
    <% component.with_error(@error) %>
    <% component.with_submit('Refresh ILS Metadata',
                             confirm: I18n.t('confirm_messages.item.refresh_ILS'),
                             disabled: @item.descriptive_metadata.bibnumber.blank?,
                             class: %w[btn btn-primary]) %>
  <% end %>
<% end %>

<% if can? :delete, @item  %>
  <%= render Form::Component.new(name: 'delete_item', url: item_path(@item), method: :delete) do |component| %>
    <% component.with_error(@error) %>
    <% component.with_submit('Delete Item', confirm: I18n.t('confirm_messages.item.delete'), variant: :danger) %>
  <% end %>
<% end %>
</div>
