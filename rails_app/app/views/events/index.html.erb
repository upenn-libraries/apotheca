<%= render(Breadcrumbs::Component.new) do |component| %>
  <% component.with_breadcrumb(href: '/') { 'Home' } %>
  <% component.with_breadcrumb { 'Events' } %>
  <% if @resource.is_a?(ItemResource) %>
    <% component.with_breadcrumb(active: true, href: item_path(@resource.id)) { @resource.display_title } %>
  <% else %>
    <% component.with_breadcrumb(active: true, href: asset_path(@resource.id)) { @resource.display_title } %>
  <% end %>
<% end %>

<%= render(Header::Component.new) do |header| %>
  <%= header.with_title { "Events for #{@resource.display_title}" } %>
<% end %>

<%= render partial: 'events_listing' %>

<%= paginate @events %>
