<h4>Assets (arranged)</h4>
<% if @arranged_assets&.any? %>
<% @arranged_assets.each do |asset| %>
<%= render(AssetCard::Component.new(asset: asset)) %>
<% end %>
<% else %>
  <p>No arranged assets</p>
<% end %>

<h4>Assets (unarranged)</h4>
<% if @unarranged_assets&.any? %>
<% @unarranged_assets.each do |asset| %>
  <%= render(AssetCard::Component.new(asset: asset)) %>
<% end %>
<% else %>
  <p>No unarranged assets</p>
<% end %>
