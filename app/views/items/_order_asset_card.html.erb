<div class="card asset-card mb-1 g-0" draggable="true" data-asset-id="<%= asset.id %>">
  <div class="row">
    <div class="col-auto" style="max-width: 120px">
      <%= tag :img, src: file_asset_path(asset, type: :thumbnail, disposition: :inline), alt: 'Thumbnail for Asset', class: 'img-thumbnail border-0', draggable: 'false' %>
    </div>
    <div class="col">
      <div class="card-body d-flex flex-row justify-content-between align-items-center">
        <span class="badge bg-primary asset-order-number"></span>
        <div class="p-2">
          <p class="card-text"><%= asset.original_filename %> | <%= asset.id %></p>
        </div>
        <div class="arranged-shortcut-buttons text-end <%= arranged ? '' : 'visually-hidden' %>">
          <a href="#" class="btn btn-link">Mark Unordered</a>
          <a href="#" class="btn btn-link">Make First</a>
          <a href="#" class="btn btn-link">Make Last</a>
        </div>
        <%= form.hidden_field 'item[structural_metadata][arranged_asset_ids][]', class: 'asset-id-input', value: asset.id, disabled: !arranged %>
      </div>
    </div>
  </div>
</div>
