
<%= render(Header::Component.new) do |header| %>

  <%= header.with_title(tag: :h3) { 'Administrative Information' } %>
  <%= header.with_link(href: edit_item_path(@item, anchor: 'administrative-info')) { 'Edit' } if can? :update, @item %>
<% end %>

<%= render(StaticFields::Component.new) do |component| %>
  <% component.with_field(
       label: 'Human Readable Name',
       values: @item.human_readable_name
     ) %>
  <% component.with_field(
       label: 'Internal Notes',
       values: @item.internal_notes
     ) %>
<% end %>

<% if can? :delete, @item  %>
  <%= render Form::Component.new(name: 'delete_item', url: item_path(@item), method: :delete) do |component| %>
    <% component.with_error(@error) %>
    <% component.with_submit('Delete Item', confirm: 'Do you really want to delete this item?', class: %w[btn btn-danger]) %>
  <% end %>
<% end %>
