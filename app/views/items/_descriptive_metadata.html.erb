
<%= render(Header::Component.new) do |header| %>
  <%= header.with_title(tag: :h3) { 'Descriptive Metadata' } %>
  <%= header.with_link(href: edit_item_path(@item, anchor: 'descriptive')) { 'Edit' } if can? :update, @item %>
<% end %>

<%= render(StaticFields::Component.new) do |component| %>
  <% ItemResource::DescriptiveMetadata::FIELDS.each do |field| %>
    <% component.with_field(
         label: field.to_s.titlecase,
         values: @item.descriptive_metadata.send(field)
       ) %>
  <% end %>
<% end %>
