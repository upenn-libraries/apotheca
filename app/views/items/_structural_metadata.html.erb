
<%= render(Header::Component.new) do |header| %>
  <%= header.with_title(tag: :h3) { 'Structural Metadata' } %>
  <%= header.with_right_link(href: edit_item_path(@item, anchor: 'structural')) { 'Edit' } if can? :update, @item %>
<% end %>

<%= render(StaticFields::Component.new) do |component| %>
  <% component.with_field(
       label: 'Viewing Hint',
       values: @item.structural_metadata.viewing_hint
     ) %>
  <% component.with_field(
       label: 'Viewing Direction',
       values: @item.structural_metadata.viewing_direction
     ) %>
<% end %>
