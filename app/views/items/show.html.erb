<%= render(BreadcrumbsComponent.new) do |component| %>
  <% component.breadcrumb(href: "/") do %>Home<% end %>
  <% component.breadcrumb(href: "/items") do %>Items<% end %>
  <% component.breadcrumb(active: true) do %><%= @item.human_readable_name %><% end %>
<% end %>

<h2><%= @item.human_readable_name %></h2>

<ul class="nav nav-tabs nav-fill" id="item-tabs" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link active" id="descriptive-metadata-tab" data-bs-toggle="tab" data-bs-target="#descriptive-metadata" type="button" role="tab" aria-controls="descriptive-metadata" aria-selected="true">
      Descriptive Metadata
    </button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="structural-metadata-tab" data-bs-toggle="tab" data-bs-target="#structural-metadata" type="button" role="tab" aria-controls="structural-metadata" aria-selected="false">
      Structural Metadata
    </button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="assets-tab" data-bs-toggle="tab" data-bs-target="#assets" type="button" role="tab" aria-controls="assets" aria-selected="false">
      Assets
    </button>
  </li>
</ul>

<div class="tab-content" id="item-tabContent">
  <div class="tab-pane fade show active" id="descriptive-metadata" role="tabpanel" aria-labelledby="descriptive-metadata-tab">
    <%= render partial: 'descriptive_metadata_form' %>
    <p><%= @item.descriptive_metadata.as_json %></p>
  </div>
  <div class="tab-pane fade" id="structural-metadata" role="tabpanel" aria-labelledby="structural-metadata-tab">
    <h4>Structural Metadata</h4>
    <p><%= @item.structural_metadata.as_json %></p>
  </div>
  <div class="tab-pane fade" id="assets" role="tabpanel" aria-labelledby="assets-tab">
    <h4>Assets (unarranged)</h4>
    <% if @assets.any? %>
      <ul>
        <% @assets.each do |asset| %>
          <li><%= asset.as_json %></li>
        <% end %>
      </ul>
    <% else %>
      <p>No assets</p>
    <% end %>
  </div>
</div>



