<%= render(Form::Component.new(model: @user, input_col: { sm: 6 })) do |form| %>
  <% form.with_field(:email, type: :email) %>
  <% form.with_field(:first_name, type: :text) %>
  <% form.with_field(:last_name, type: :text) %>
  <% form.with_field(:roles, type: :select, value: @user.roles.first, choices: User::ROLES) %>
  <% form.with_field(:active, type: :boolean) %>
  <% form.with_submit('Save') %>
<% end %>