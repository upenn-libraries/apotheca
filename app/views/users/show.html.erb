<%= render(BreadcrumbsComponent.new) do |component| %>
  <% component.with_breadcrumb(href: '/') do %>Home<% end %>
  <% component.with_breadcrumb(href: users_path) do %>Users<% end %>
  <% component.with_breadcrumb(active: true) do %><%= @user.email %><% end %>
<% end %>

<h2>User Information</h2>

<%= link_to 'Edit User', edit_user_path(@user), class: 'btn btn-primary mb-2' %>

<dl>
  <dt>Email:</dt>
  <dd><%= @user.email %></dd>
  <dt>Name:</dt>
  <dd><%= @user.full_name %></dd>
  <dt>Roles:</dt>
  <dd><%= @user.roles.join(', ') %></dd>
  <dt>Active?</dt>
  <dd><%= @user.active %></dd>
</dl>
