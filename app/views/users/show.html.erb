<%= render(Breadcrumbs::Component.new) do |component| %>
  <% component.with_breadcrumb(href: '/') do %>Home<% end %>
  <% component.with_breadcrumb(href: users_path) do %>Users<% end %>
  <% component.with_breadcrumb(active: true) do %><%= @user.email %><% end %>
<% end %>

<%= render(Header::Component.new) do |header| %>
  <%= header.with_title { @user.full_name } %>
  <%= header.with_link(href: edit_user_path(@user)) { 'Edit User' } %>
<% end %>

<%= render(StaticFields::Component.new) do |component| %>
  <%= component.with_field(
        label: 'Email',
        values: @user.email
      ) %>
  <%= component.with_field(
        label: 'Name',
        values: @user.full_name
      ) %>
  <%= component.with_field(
        label: 'Roles',
        values: @user.roles.join(', ')
      ) %>
  <%= component.with_field(
        label: 'Active?',
        values: @user.active
      ) %>
<% end %>