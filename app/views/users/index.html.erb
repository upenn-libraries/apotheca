<%= render(BreadcrumbsComponent.new) do |component| %>
  <% component.breadcrumb(href: "/") do %>Home<% end %>
  <% component.breadcrumb(active: true) do %>Users<% end %>
<% end %>

<h2>Users</h2>

<%= link_to 'New User', new_user_path(@user), class: 'btn btn-primary mb-2' %>

<table class="table">
  <thead>
  <tr>
    <th scope="col">Email</th>
    <th scope="col">First Name</th>
    <th scope="col">Last Name</th>
    <th scope="col">Roles</th>
    <th scope="col">Active?</th>
    <th scope="col">Created</th>
    <th scope="col">Updated</th>
    <th scope="col"></th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
  <tr>
    <td><%= link_to user.email, user_path(user) %></td>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.roles.join(', ') %></td>
    <td><%= user.active ? 'yes' : 'no' %></td>
    <td><%= user.created_at.to_s(:display) %></td>
    <td><%= user.updated_at.to_s(:display) %></td>
    <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-sm btn-outline-primary' %></td>
  </tr>
  <% end %>
  </tbody>
</table>
