<%= bootstrap_form_tag(url: bulk_exports_path, method: 'get') do |form| %>
  <div class="row mb-3 align-items-center">
    <div class="col-12 col-md-auto">
      <%= form.select 'filter[created_by]',
                      options_from_collection_for_select(@users, 'email', 'email', params.dig('filter', 'created_by')),
                      include_blank: true,
                      label: 'Created By'
      %>
    </div>
    <div class="col-12 col-md-auto">
      <%= form.select 'sort[field]',
                      options_for_select([["Created At", "created_at"], ["Generated At", "generated_at"]],
                                         params.dig('sort', 'field')),
                      label: 'Sort By'
      %>
    </div>
    <div class="col-12 col-md-auto">
      <%= form.select 'sort[direction]',
                      options_for_select([%w[Descending desc], %w[Ascending asc]], params.dig('sort', 'direction')),
                      label: 'Sort Direction'
      %>
    </div>
    <div class="col-12 col-md-auto">
      <%= form.select 'per_page',
                      options_for_select([10, 25, 50, 100], params[:per_page].to_i),
                      { prompt: 'Select Per Page' },
                      { class: 'form-control' }
      %>
    </div>
    <div class="col-12 col-lg-3 col-xl-2 mt-3 d-flex align-items-center justify-content-around">
        <%= form.submit 'Submit', name: nil, class: 'btn btn-primary' %>
        <%= link_to 'Clear', bulk_exports_path, name: nil, class: 'btn btn-secondary'%>
    </div>
  </div>
<% end %>