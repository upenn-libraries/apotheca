<%= render(Form::Component.new(model: @bulk_export, size: :sm)) do |form| %>
  <% form.with_field(:title, type: :text) %>
  <% form.with_field(:solr_params, type: :text, disabled: true) %>
  <% form.with_field(:solr_params, type: :hidden, value: params[:solr_params].to_json) %>
  <% form.with_field(:include_assets, type: :switch, label: "Include Assets?") %>

  <% form.with_submit('Create') %>
<% end %>