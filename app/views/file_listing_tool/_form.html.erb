<%= bootstrap_form_tag url: file_listing_tool_file_list_path(format: :json), layout: :horizontal, remote: true, html: { id: 'new-file-listing' } do |f| %>
  <%= select_tag :drive, options_for_select(ImportService::S3Storage.all.keys), class:"form-select", data: {"action":"change->file-lister--file-lister#getDrive", "file-lister--file-lister-target":"select" }, include_blank: true %>
  <%= f.text_field :path, control_col: 'col-sm-4', data: {"file-lister--file-lister-target":"path" } %>
  <%= f.form_group do %>
    <%= f.submit 'List Filenames', class: 'btn btn-primary', data: { "action":"click->file-lister--file-lister#submit" }%>
  <% end %>
<% end %>

