<%= form_tag(@url, **@options) do %>
  <%= error %>

  <%= hidden_field_tag :form, @name %>

  <% inputs.each do |input| %>
    <%= input %>
  <% end %>

  <% fields.each do |field| %>
    <%= field %>
  <% end %>

  <% sections.each do |section| %>
    <%= section %>
  <% end %>

  <%= submit %>
<% end %>
