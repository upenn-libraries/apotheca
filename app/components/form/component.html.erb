<%= form_tag(url, **@options) do %>
  <%= error %>

  <%= hidden_field_tag(:form, @name) if @name %>

  <% fields.each do |field| %>
    <%= field %>
  <% end %>

  <% sections.each do |section| %>
    <%= section %>
  <% end %>

  <% if fields? %>
    <%= render(RowComponent.new(:div)) do %>
      <%= render(ColumnComponent.new(:div, col: @input_col, offset: @label_col)) do %>
        <%= submit %>
      <% end %>
    <% end %>
  <% else %>
    <%= submit %>
  <% end %>
<% end %>
