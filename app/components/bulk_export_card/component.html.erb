<div class="card mb-5 col %>">
  <div class="card-body">
    <div class="row align-items-center">
      <h2 class="card-title col-sm-10 fs-5">
        <%= "#{@options[:count]}." if @options[:count].present?%>
        <%= bulk_export.title || bulk_export.csv.filename %>
      </h2>
      <%= csv_download_link if bulk_export.csv.attached?%>
    </div>
    <table class="table table-striped table-responsive">
      <thead>
      <tr class="text-center">
        <th scope="col">State</th>
        <th scope="col">Duration (ms)</th>
        <th scope="col">Generated By</th>
        <th scope="col">Generated At</th>
        <th scope="col" class="visually-hidden">Regenerate</th>
        <th scope="col" class="visually-hidden">Cancel</th>
        <th scope="col" class="visually-hidden">Delete</th>
      </tr>
      </thead>
      <tbody>
      <tr class="text-center">
        <td><%= bulk_export.state.titleize %></td>
        <td><%= bulk_export.duration.to_s %></td>
        <td><%= bulk_export.user.email %></td>
        <td><%= bulk_export.generated_at&.to_fs(:display) %></td>
        <td>
          <% if can_regenerate?%>
            <button class="btn btn-outline-primary">Regenerate Export</button>
          <% end %>
        </td>
        <td>
          <% if can_cancel? %>
            <button class="btn btn-outline-secondary">Cancel Export</button>
          <% end %>
        </td>
        <td>
          <% if can_delete? %>
            <button class="btn btn-danger">Delete Export</button>
          <% end %>
        </td>
      </tr>
    </table>
    <h5 class="card-text">Search Parameters</h5>
    <table class="table table-striped table-responsive">
      <thead>
      <tr>
        <th scope="col" class="border-0">Rows and Sort</th>
        <th scope="col" colspan="3" class="border-0">Search</th>
        <th scope="col" colspan="3" class="border-0">Filter</th>
      </tr>
      </thead>
      <tbody>
      <tr>
        <td>
          <div class="row">
        <div class="col-auto fw-bold"><%= 'Rows' if bulk_export.solr_params.dig('rows').present? %></div>
        <div class="col-auto"><%= bulk_export.solr_params.dig('rows') %></div>
          </div>
        </td>
        <td colspan="3">
          <div class="row">
        <div class="col-auto fw-bold"><%= 'All' if bulk_export.solr_params.dig('search', 'all').present? %></div>
        <div class="col-auto"><%= bulk_export.solr_params.dig('search', 'all') %></div>
          </div>
        </td>
        <td colspan="3">
          <% bulk_export.solr_params.dig('filter')&.each do |key, value| %>
            <% if value.present? %>
              <div class="row">
                <div class="col-3 fw-bold"> <%= key.titleize%></div>
                <div class="col-9"><%=value %></div>
              </div>
            <% end  %>
          <% end %>
        </td>
      </tr>
      <tr>
        <td>
          <div class="row">
            <div class ="col-auto fw-bold"><%= 'Sort' if bulk_export.solr_params.dig('sort').present? %></div>
            <div class="col-auto">
            <%= "#{bulk_export.solr_params.dig('sort', 'field')}," if bulk_export.solr_params.dig('sort', 'field')  %>
            <%= bulk_export.solr_params.dig('sort', 'direction') %></div>
          </div>
        </td>
        <td colspan="3">
          <div class="row">
        <div class="col-auto fw-bold"><%= 'Fielded' if bulk_export.solr_params.dig('search', 'fielded').present? %></div>
        <div class="col-auto">
          <ul class="list-group">
            <% bulk_export.solr_params.dig('search', 'fielded')&.each do |fielded| %>
              <li class="list-group-item border-0 p-0" style=background:none><%= "#{fielded.dig("opr")} #{fielded.dig("field")}: '#{fielded.dig("term")}'"%></li>
            <% end %>
          </ul>
        </div>
        </div>
        </td>
        <td colspan="3"></td>
      </tr>
      </tbody>
    </table>
  </div>
</div>
